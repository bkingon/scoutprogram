<%- model_class = Program -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @program.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:theme) %>:</strong></dt>
  <dd><%= @program.theme %></dd>
  <dt><strong><%= model_class.human_attribute_name(:theme_description) %>:</strong></dt>
  <dd><%= @program.theme_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_by_id) %>:</strong></dt>
  <dd><%= @program.created_by_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_by_id) %>:</strong></dt>
  <dd><%= @program.updated_by_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duration) %>:</strong></dt>
  <dd><%= @program.duration %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              programs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_program_path(@program), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              program_path(@program),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
